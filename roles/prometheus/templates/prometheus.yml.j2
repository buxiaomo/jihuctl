# my global config
global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: "node-exporter"
    static_configs:
      - targets: [ {% for host in gitlab %}"{{ host }}:9100"{% if not loop.last %},{% endif %}{% endfor %} ]
  - job_name: "pgbouncer-exporter"
    static_configs:
      - targets: [ {% for host in pgbouncer %}"{{ host }}:9188"{% if not loop.last %},{% endif %}{% endfor %} ]
  - job_name: "postgres-exporter"
    static_configs:
      - targets: [ {% for host in postgres %}"{{ host }}:9187"{% if not loop.last %},{% endif %}{% endfor %} ]
  - job_name: "redis-exporter"
    static_configs:
      - targets: [ {% for host in redis %}"{{ host }}:9121"{% if not loop.last %},{% endif %}{% endfor %} ]
